{
  "name": "npm-task-runner",
  "version": "1.0.0",
  "description": "task runner for static websites",
  "main": "index.js",
  "scripts": {
    "init:directories": "mkdir js images vendor css scss",
    "init:files": "touch index.html README.md scss/style.scss js/script.js",
    "init:gitignore": "curl https://raw.githubusercontent.com/github/gitignore/master/Node.gitignore -o .gitignore",
    "init-project": "npm install && npm-run-all init:*",
    "build:css": "node-sass --output-style expanded --source-map css -o css scss/style.scss && npm run autoprefixer",
    "autoprefixer": "autoprefixer-cli css/style.css && echo Autoprefixed",
    "browsersync": "browser-sync start --server --files \"css/*.css\" \"*.html\"",
    "watch:scss": "onchange \"scss/**/*.scss\" \"scss/*.scss\" -- npm run build:css",
    "watch": "npm-run-all -p watch:scss autoprefixer browsersync",
    "concatScripts": "cat js/somefile2.js > js/script.js",
    "uglify": "uglifyjs js/script.js -o build/script.js",
    "finalBuildJS": "npm-run-all concatScripts uglify",
    "finalBuildCSS": "node-sass --output-style compressed -o build css/style.css",
    "finish": "npm-run-all -p finalBuildCSS finalBuildJS",
    "test:html": "globstar nu-html-checker *.html",
    "test:js": "globstar jshint js/*.js",
    "test": "npm-run-all test:*",
    "cleanjs": "globstar -- rm -f build/*.js",
    "cleancss": "globstar -- rm -f build/*.css",
    "clean": "rm -rf build"
  },
  "keywords": [
    "npm",
    "task-runner",
    "web-development"
  ],
  "author": "Wojciech Kalebasiak",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer-cli": "^1.0.0",
    "browser-sync": "^2.24.6",
    "globstar": "^1.0.0",
    "jshint": "^2.9.6",
    "node-sass": "^4.9.2",
    "npm-run-all": "^4.1.3",
    "nu-html-checker": "^0.1.0",
    "onchange": "^4.1.0",
    "uglify-js": "^3.4.6"
  },
  "dependencies": {}
}
